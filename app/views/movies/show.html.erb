<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
  </div>
  <div class="details">
    <h1>
      <%= @movie.title%>
    </h1>
    <h2>
      Total Gross: <%=total_gross(@movie)%>
    </h2>
    <h3>
      &bull; <%= year_of(@movie)%> 
    </h3>
    <div class="reviews">
      <h2>
        <%= link_to pluralize(@movie.reviews.length, "Review"), movie_review_path(@movie) %>
      </h2>
    </div>
    <h6><%= @movie.rating  %></h6>
    <p><%=@movie.description%></p>
    <table>
      <tr>
        <th>Director:</th>
        <th><%=@movie.director%></th>
      </tr>
      <tr>
        <th>Duration:</th>
        <th><%=@movie.duration%></th>
      </tr>
      <tr>
        <th>Total Gross</th>
        <th><%=total_gross(@movie)%></th>
      </tr>
    </table>
  </div>
  
 
</section>

<section class="admin">
<span>
  <%= link_to "Edit", edit_movie_path(@movie), 
              class: "button"
  %>
  <%= link_to "Delete", movie_path(@movie), class: 'button', 
              method: :delete, 
              data: {confirm: "Are you sure?"} 
  %>
  <span>
</section>

